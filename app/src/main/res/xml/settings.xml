<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory android:title="@string/content" />
    <CheckBoxPreference
        android:key="loadImages"
        android:defaultValue="true"
        android:title="@string/load_images" />
    <CheckBoxPreference
        android:key="loadOnCellular"
        android:title="@string/load_images_on_cellular"
        android:defaultValue="true"/>
    <CheckBoxPreference
        android:key="loadVideos"
        android:title="@string/load_videos"
        android:defaultValue="true"/>
    <CheckBoxPreference
        android:key="displayGifs"
        android:title="@string/display_gifs"
        android:defaultValue="true"/>
    <CheckBoxPreference
        android:key="textSelectable"
        android:title="@string/select_text"
        android:defaultValue="true"/>
    <CheckBoxPreference
        android:key="supportSmilepack"
        android:title="@string/support_smilepack"
        android:defaultValue="true"/>

    <CheckBoxPreference
        android:key="blockUsers"
        android:title="@string/block_users"/>

    <PreferenceCategory android:title="Notifications"/>

    <CheckBoxPreference
        android:key="showNotificationsReplies"
        android:defaultValue="false"
        android:title="@string/show_notification_replies"/>

    <CheckBoxPreference
        android:key="autoAutoUpdate"
        android:defaultValue="false"
        android:title="@string/auto_autoupdate"/>

    <PreferenceCategory android:title="@string/app" />
    <CheckBoxPreference
        android:key="forceRussian"
        android:title="@string/force_russian" />
    <ListPreference
        android:entries="@array/theme_names"
        android:entryValues="@array/theme_values"
        android:key="theme"
        android:title="@string/theme" />
    <CheckBoxPreference
        android:defaultValue="true"
        android:key="saveCommentState"
        android:title="@string/save_comments_state" />
    <CheckBoxPreference
        android:key="showDelimiters"
        android:title="@string/show_delimiters" />

</PreferenceScreen>